
<div id="<%= dom_id quote %>">


<div class="card">
  <div class="card-header">
    Quote
  </div>
  <div class="card-body">
    <h5 class="card-title"> <%= quote.saying %> </h5>
    <p class="card-text"> -- <%= quote.said_by %> </p>

    <%= link_to "Edit", edit_quote_path(quote), class: "btn btn-primary bi bi-plus-circle"%> 
    <%= link_to "Vote", upvote_quote_path(quote), method: :get, class: "btn btn-secondary bi bi-hand-thumbs-up"%>  
   <%= button_to "Delete", quote, method: :delete, class: "btn btn-danger bi bi-trash" %> 
   
  </div> 
</div>  
  
    


</div>


