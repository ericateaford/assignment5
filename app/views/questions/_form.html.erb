<%= form_with(model: question) do |form| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div>
    <%= form.label :input, style: "display: block" %>
    <%= form.text_field :input %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>


  <div class="clearfix">
  <% unless question.new_record? %>
    <h2>Add a Question</h2> 

    <%= form.fields_for :choices do |f| %>
      <%= render 'choice_fields', f: f %>
    <% end %> 

    <button type="button" class="btn btn-success add_child_btn float-end">Add question</button>
  <% end %>
</div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
